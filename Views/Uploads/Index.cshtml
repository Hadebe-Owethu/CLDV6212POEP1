@model ABCRetailer.Models.FileUploadViewModel

<h2>Upload Proof of Payment</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form asp-action="Index" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="CustomerName" class="control-label"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderId" class="control-label"></label>
        <input asp-for="OrderId" class="form-control" />
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProofOfPayment" class="control-label"></label>
        <input asp-for="ProofOfPayment" type="file" class="form-control" />
        <span asp-validation-for="ProofOfPayment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Upload" class="btn btn-primary" />
        <a asp-action="List" class="btn btn-secondary">View Uploads</a>
    </div>
</form>