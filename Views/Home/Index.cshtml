@{
    ViewData["Title"] = "Home";
}

<h2>Welcome to ABCRetailer</h2>

<div class="mb-4">
    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary me-2">
        <i class="fa-solid fa-box"></i> View Products
    </a>
    <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-secondary me-2">
        <i class="fa-solid fa-user"></i> View Customers
    </a>
    <a asp-controller="Order" asp-action="Index" class="btn btn-outline-success">
        <i class="fa-solid fa-receipt"></i> View Orders
    </a>
</div>

<h4>Featured Products</h4>
<div class="row">
    @* Example loop for 5 products *@
    @for (int i = 0; i < 5; i++)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Product Image" />
                <div class="card-body">
                    <h5 class="card-title">Product @i</h5>
                    <p class="card-text">Description for product @i.</p>
                    <a href="#" class="btn btn-sm btn-primary">View</a>
                </div>
            </div>
        </div>
    }
</div>

<h4 class="mt-5">Dashboard Stats</h4>
<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Products</h5>
                <p class="card-text">120</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <p class="card-text">85</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Pending Orders</h5>
                <p class="card-text">12</p>
            </div>
        </div>
    </div>
</div>
